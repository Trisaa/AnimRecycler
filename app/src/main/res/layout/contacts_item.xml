<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ffffff"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/user_icon_layout"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp">

        <ImageView
            android:id="@+id/user_icon_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@mipmap/icon" />

        <ImageView
            android:id="@+id/user_checked_img"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/click_cicle" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/user_icon_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terry"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_describe_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terry"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="75dp"
        android:background="#e8e8e8" />
</RelativeLayout>